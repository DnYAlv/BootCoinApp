@model IEnumerable<User>
@{
    ViewData["Title"] = "Add Coin";
}

<div class="top d-flex top-container theme-container-change">
    <form class="w-100" asp-action="CoinPeople" asp-controller="Coin">
        <input type="text" name="query" class="search-bar w-100" placeholder="Search" />
    </form>

    <div class="d-inline-flex center-vertical profile">
        <div class="d-flex center-vertical">
            <a class="margin-0 theme-text-change" id="main-text">Admin</a>
        </div>
        <img class="ml-10" src="../assets/bootcoin.png" width="30" height="30" />
    </div>
</div>

<div class="title theme-text-change theme-container-change">
    <h3>@ViewData["Title"]</h3>
</div>

<div class="d-flex justify-content-center theme-background-change">
    <a class="button-coin fw-bolder selected left-button">People</a>
    <a class="button-coin fw-bolder right-button" asp-area="" asp-controller="Coin" asp-action="CoinGroup">Group</a>
</div>

@if (Model != null){
    <div class="row-coin-card-people theme-background-change">
        @foreach (var item in Model){
            <div class="col-coin-card-people theme-container-change" data-id="@item.Id" data-name="@item.FullName" onclick="changeColCoinPeopleAttr(this)">
                <div class="coin-container">
                    <h6>@item.Bootcoin</h6>
                </div>
                <div class="card-body" style="text-align:center;">
                    <div>
                        <img src="../assets/bootcoin.png" alt="..." width="100" height="100">
                    </div>
                    <h6 class="theme-text-change">@item.FullName</h6>
                </div>
            </div>
        }
        <div class="col-coin-card-people theme-container-change">
            <div class="card-body" style="text-align:center;">
                <div>
                    <img src="../assets/bootcoin.png" alt="..." width="100" height="100">
                </div>
                <h6 class="theme-text-change">Add New</h6>
            </div>
        </div>
    </div>
}
else
{
    <p>No item found</p>
}

<div class="d-flex justify-content-center theme-background-change" style="padding-top: 10px;">
    <input type="checkbox" id="multiple-people" name="multiple" value="multiple" onclick="multiplePeopleChange()">
    <label for="multiple" style="margin-left: 10px;" id="multiple-text">Multiple select</label>
</div>

<div class="d-flex justify-content-center pt-5">
    <form method="post" asp-controller="Coin" asp-action="PassingUser">
        <div id="hidden-div" style="display:none">
        </div>
        <button type="submit" class="btn btn-danger align-content-center ps-4 pe-4" style="border-radius:12px; background-color:#AD1A25; font-size: 24px">Input</button>
    </form>
</div>