<div class="title p-content">
    <h3>@ViewData["Title"]</h3>
</div>

<div>  
    <img class="d-block" src="#" style="margin: auto; width: 85%;"/>
</div>

<div class="p-content">
    <h5 class="fw-bolder">Reward Category</h5>
</div>

<div class="row" style="margin: 10px 20px;">
    @foreach (var item in Model)
    {
        <div class="card col" style="width: 19rem;">
            <img src="..." class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <a asp-controller="Reward" asp-action="Index" asp-route-categoryId="@item.Id" asp-route-categoryName="@item.Name" class="btn btn-primary">Details</a>
            </div>
        </div>
    }
</div>