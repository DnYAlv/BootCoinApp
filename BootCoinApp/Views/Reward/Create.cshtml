@model Reward
@{
    ViewData["Title"] = "Create Reward";
}
<div class="top d-flex justify-content-end align-items-end top-container">
    <div class="d-inline-flex center-vertical profile">
        <div class="d-flex center-vertical">
            <a class="text-black margin-0" id="main-text">Admin</a>
        </div>
        <img class="ml-10" src="./assets/bootcoin.png" width="30" height="30" />
    </div>
</div>

<div class="title p-content">
    <h3>@ViewData["Title"]</h3>
</div>

<div>
    <img class="d-block" src="#" style="margin: auto; width: 85%;" />
</div>

<div class="p-content">
    <h5 class="fw-bolder">Reward Details - @ViewData["categoryName"] </h5>
</div>

<div class="p-content">
    <form method="post" asp-controller="Reward" asp-action="Create">
        <div class="mb-3">
            <label for="category_reward">Category Reward</label>
            <input class="form-control" placeholder="@ViewData["categoryName"]" readonly>
        </div>
        <div class="mb-3">
            <label asp-for="RewardName" class="form-label">Reward Name</label>
            <input asp-for="RewardName" class="form-control" placeholder="Reward Name">
            <span asp-validation-for="RewardName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="RewardDescription" class="form-label">Reward Description</label>
            <input asp-for="RewardDescription" class="form-control" placeholder="Reward Description">
            <span asp-validation-for="RewardDescription" class="text-danger"></span>
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
