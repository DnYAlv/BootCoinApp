@model Reward
@{
    ViewData["Title"] = "Create Reward";
}
<div class="top row justify-content-between align-items-center top-container">
    <div class="col-md-6">
        <form class="" asp-action="Index" asp-controller="Reward" asp-route-categoryId="@ViewData["categoryID"]" asp-route-categoryName="@ViewData["categoryName"]">
            <input type="text" name="query" class="search-bar w-100" placeholder="Search" />
        </form>
    </div>   

    <div class="col-md-6">
        <div class="d-flex justify-content-end center-vertical">
            <a class="text-black margin-0" id="main-text">Admin</a>
            <img class="ml-10" src="~/assets/bootcoin.png" width="30" height="30" />
        </div>
    </div>
</div>

<div class="title p-content">
    <h3>@ViewData["Title"]</h3>
</div>

<div class="ps-5 pt-5 pb-3">
    <h5 class="fw-bolder">Create Reward - @ViewData["categoryName"] </h5>
</div>

<div class="ps-5 pe-5">
    <form method="post" asp-controller="Reward" asp-action="Create" enctype="multipart/form-data">
        <input type="hidden" asp-for="CategoryId" value="@ViewData["categoryID"]"/>
        <div class="mb-2">
            <label for="category_name">Category Reward</label>
            <input for="category_name" class="form-control" placeholder="@ViewData["categoryName"]" readonly>
        </div>
        <div class="mb-2">
            <label asp-for="RewardName" class="form-label">Reward Name</label>
            <input asp-for="RewardName" class="form-control" placeholder="Reward Name">
            <span asp-validation-for="RewardName" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label asp-for="RewardDescription" class="form-label">Reward Description</label>
            <input asp-for="RewardDescription" class="form-control" placeholder="Reward Description">
            <span asp-validation-for="RewardDescription" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label asp-for="RequiredCoin" class="form-label">Required Coin</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <button type="button" class="btn btn-outline-secondary" id="decrement">-</button>
                </div>
                <input asp-for="RequiredCoin" type="number" class="form-control" id="quantity" value="1" min="1">
                <div class="input-group-append">
                    <button type="button" class="btn btn-outline-secondary" id="increment">+</button>
                </div>
            </div>
            <span asp-validation-for="RequiredCoin" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label asp-for="Photo"></label>
            <input type="file" asp-for="Photo" class="form-control" />
            <span asp-validation-for="Photo" class="text-danger"></span>
        </div>
        <a class="btn btn-secondary" asp-action="Index" asp-controller="Reward" asp-route-categoryId="@ViewData["categoryID"]" asp-route-categoryName="@ViewData["categoryName"]">Back</a>
        <button type="submit" class="btn btn-primary" asp-route-categoryId="@ViewData["categoryID"]" asp-route-categoryName="@ViewData["categoryName"]">Submit</button>     
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
    $(document).ready(function() {
      $("#decrement").click(function() {
        var value = $("#quantity").val();
        if (value > 1) {
          value--;
        }
        $("#quantity").val(value);
      });
      $("#increment").click(function() {
        var value = $("#quantity").val();
        value++;
        $("#quantity").val(value);
      });
    });
</script>
